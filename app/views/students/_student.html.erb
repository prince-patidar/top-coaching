<div class='container mt-3 me-5'>
  <% row_number = 0 %>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Student</th>
        <th scope="col">Class</th>
      </tr>
    </thead>
    <tbody>
      <% students.each do |user| %>
        <tr>
          <th scope="row"><%= row_number += 1 %></th>
          <td><%= user.email %></td>
          <td><%= user.grades.first.class_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>