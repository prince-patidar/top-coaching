<h2 class='heading-before-table'>Your All Notifications</h2> 
<br>
<div class=''>
<% row_number = 0 %>
<div class='container mt-3 me-5'>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Message</th>
        <th scope='col'></th>
      </tr>
    </thead>
    <tbody>
      <% @notifications.each do |notification| %>
        <% cache([current_user, notification]) do %>
        <tr>
          <th scope="row"><%= row_number += 1 %></th>
          <td><%= notification.title %></td>
          <td><%= notification.message %></td>
          <td>
            <li><%= link_to 'Destroy Notification', notification_path(notification), :method => :delete %></li>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  </div>
</div>